                                                            <option value="3">Checkout Page</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-sm-4">
                                                    <div class="form-group">
                                                        <label class="form-label">Redirect URL*</label>
                                                        <input class="form-control" type="text" value="" />
                                                    </div>
                                                </div>
                                                
                                            </div>
                                           
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <div class="form-group">
                                                        <div class="form-label-group">
                                                        <label class="form-label">Description One*</label>
                                                        </div>
                                                        <textarea class="form-control" rows="2" placeholder="Write an internal note..."></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <div class="form-group">
                                                        <div class="form-label-group">
                                                        <label class="form-label">Description Two</label>
                                                        </div>
                                                        <textarea class="form-control" rows="2" placeholder="Write an internal note..."></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <div class="form-group">
                                                        <div class="form-label-group">
                                                        <label class="form-label">Description Three</label>
                                                        </div>
                                                        <textarea class="form-control" rows="2" placeholder="Write an internal note..."></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                    
                                            <div
                                                class="title title-xs title-wth-divider text-primary text-uppercase my-4">
                                                <span>Upload Banner Image</span>
                                            </div>

                                            <div class="row gx-3">
                                                    <div class="col-sm-12">
                                                        <div id="prev_1" class="collapse show">
                                                            <div class="card-body">
                                                                <input type="file" id="input-file-now"
                                                                    class="dropify" />
                                                            </div>
                                                        </div>
                                                    </div>                                                   
                                            </div>

                                            <button type="button" class="btn btn-primary mt-5">Update Banner</button>
                                        </form>
                                    </div>
                               
                                </div>
                            </div>
